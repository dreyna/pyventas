<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RolController</servlet-name>
        <servlet-class>com.pyventas.controller.RolController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.pyventas.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.pyventas.controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BienvenidoController</servlet-name>
        <servlet-class>com.pyventas.controller.BienvenidoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrincipalController</servlet-name>
        <servlet-class>com.pyventas.controller.PrincipalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.pyventas.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuController</servlet-name>
        <servlet-class>com.pyventas.controller.MenuController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RolController</servlet-name>
        <url-pattern>/rc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/lc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BienvenidoController</servlet-name>
        <url-pattern>/bienvenido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrincipalController</servlet-name>
        <url-pattern>/principal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuController</servlet-name>
        <url-pattern>/mc</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
